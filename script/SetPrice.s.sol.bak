import "forge-std/Script.sol" as Script9;
import "../src/modules/Reward/PriceModule.sol" as PriceModule2;
import "../src/interfaces/modules/IPriceModule.sol" as IPriceModule2;

contract SetPriceScript is Script {
    // Direcci√≥n del contrato PriceModule desplegado
//     address constant PRICE_MODULE = 0x42241C0887C6B5508d498DD7B5e4eCd1e25615E4;

    function run() external {
        vm.startBroadcast();

        IPriceModule pm = IPriceModule(PRICE_MODULE);

        // Inicializar precios de ejemplo para todos los materiales
        pm.setReferencePrices(Material.PET, [uint256(50), 55, 52, 53, 51]);
        pm.setReferencePrices(Material.PLASTIC, [uint256(200), 220, 210, 230, 205]);
        pm.setReferencePrices(Material.ALUMINUM, [uint256(100), 120, 110, 130, 105]);
        pm.setReferencePrices(Material.CARDBOARD, [uint256(30), 32, 31, 29, 33]);
        pm.setReferencePrices(Material.GLASS, [uint256(70), 75, 72, 71, 73]);

        vm.stopBroadcast();
    }
}
